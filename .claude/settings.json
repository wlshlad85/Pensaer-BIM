{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "cd app && npx prettier --write . 2>/dev/null || cd ../server && black . 2>/dev/null || cd ../kernel && cargo fmt 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(cargo *)",
      "Bash(python *)",
      "Bash(pytest *)",
      "Bash(git *)"
    ]
  }
}
