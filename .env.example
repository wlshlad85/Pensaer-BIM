# =============================================================================
# Pensaer-BIM Environment Variables
# Copy to .env and fill in values
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Database (PostgreSQL + PostGIS)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://pensaer:pensaer@localhost:5432/pensaer

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Object Storage (S3-compatible)
# -----------------------------------------------------------------------------
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=pensaer
STORAGE_SECRET_KEY=pensaer123
STORAGE_BUCKET=pensaer-models

# -----------------------------------------------------------------------------
# Kernel Service
# -----------------------------------------------------------------------------
KERNEL_URL=http://localhost:50051

# -----------------------------------------------------------------------------
# Authentication (choose one)
# -----------------------------------------------------------------------------
# Auth0
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=

# Or Clerk
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Or Supabase Auth
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
# Linear (project management)
LINEAR_API_KEY=

# Sentry (error tracking)
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Frontend (Vite)
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
VITE_APP_NAME=Pensaer

# -----------------------------------------------------------------------------
# Production Overrides
# -----------------------------------------------------------------------------
# VITE_API_URL=https://api.pensaer.io
# VITE_WS_URL=wss://api.pensaer.io/ws
# DATABASE_URL=postgresql://user:pass@prod-db.cloud/pensaer
# REDIS_URL=rediss://user:pass@prod-redis.cloud:6379
